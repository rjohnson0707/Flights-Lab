<%- include('../partials/header') %>

    <h2>Enter a New Flight</h2>
<form action="/flights" method="POST">
    <label>Depart From:
        <select name="airport">
            <option value="Austin, TX, USA">AUS</option>
            <option value="Dallas, TX, USA">DFW</option>
            <option value="Denver, CO, USA">DEN</option>
            <option value="Los Angeles, CA, USA">LAX</option>
            <option value="San Antonio, TX, USA">SAN</option>
        </select>
      
    </label><br>
    <label>Airline:
        <select name="airline">
            <option value="American">American</option>
            <option value="Delta">Delta</option>
            <option value="Southwest">Southwest</option>
        </select>
      
    </label><br>
    <label>Flight Number:
        <input type="text" name="flightNo" min="10" max="9999" required>
    </label><br>
    <label for="depart">Departs: 
        <input type="datetime-local" name="departs" value="<%= defaultDate %>">
    </label><br>
    
    <input type="submit" value="Add Flight">
</form>
<a href="/flights">Back to Flights</a>

<%- include('../partials/footer') %>